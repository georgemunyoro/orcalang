  "version": "0.2.0",
  "configurations": [
    {
      "name": "CTest",
      "type": "lldb",
      "request": "launch",
      "program": "${cmake.testProgram}",
      "args": ["${cmake.testArgs}"],
      "initCommands": ["breakpoint set -n main -N entry"],
      "exitCommands": ["breakpoint delete entry"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
